{
  "name": "jscd48",
  "version": "1.0.0",
  "description": "JavaScript interface for the CD48 Coincidence Counter using Web Serial API",
  "type": "module",
  "main": "cd48.js",
  "types": "cd48.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./cd48.d.ts",
      "import": "./cd48.js",
      "require": "./dist/cd48.umd.js"
    },
    "./errors": {
      "types": "./types/errors.d.ts",
      "import": "./errors.js"
    },
    "./validation": {
      "types": "./types/validation.d.ts",
      "import": "./validation.js"
    },
    "./analysis": {
      "types": "./types/analysis.d.ts",
      "import": "./analysis.js"
    },
    "./calibration": {
      "types": "./types/calibration.d.ts",
      "import": "./calibration.js"
    },
    "./dev-utils": {
      "types": "./types/dev-utils.d.ts",
      "import": "./dev-utils.js"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "cd48.js",
    "cd48.d.ts",
    "errors.js",
    "validation.js",
    "analysis.js",
    "calibration.js",
    "dev-utils.js",
    "types",
    "dist",
    "README.md",
    "LICENSE",
    "TROUBLESHOOTING.md"
  ],
  "scripts": {
    "start": "npx serve .",
    "dev": "vite",
    "dev:legacy": "npx serve . --cors",
    "preview": "vite preview",
    "build": "npm run build:unminified && npm run build:minified",
    "build:unminified": "vite build --config vite.config.build.js",
    "build:minified": "vite build --config vite.config.min.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --run tests/integration",
    "test:bench": "vitest bench --run",
    "test:bench:watch": "vitest bench",
    "test:e2e": "playwright test",
    "test:e2e:examples": "playwright test tests/e2e/examples.spec.js",
    "test:e2e:visual": "playwright test tests/e2e/visual-regression.spec.js",
    "test:e2e:errors": "playwright test tests/e2e/error-scenarios.spec.js",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report tests/e2e-report",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "lint": "eslint *.js examples/*.html",
    "lint:fix": "eslint --fix *.js examples/*.html",
    "format": "prettier --write \"**/*.{js,json,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html}\"",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "npm run docs && npx serve docs",
    "prepublishOnly": "npm run build && npm run lint && npm run test && npm run format:check",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenPhysics/jscd48.git"
  },
  "keywords": [
    "cd48",
    "coincidence",
    "counter",
    "physics",
    "web-serial",
    "serial",
    "instrumentation",
    "red-dog-physics",
    "radiation",
    "detector",
    "geiger",
    "scintillator",
    "calibration",
    "statistical-analysis",
    "histogram",
    "time-series",
    "data-acquisition",
    "lab-equipment"
  ],
  "author": "OpenPhysics Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenPhysics/jscd48/issues"
  },
  "homepage": "https://github.com/OpenPhysics/jscd48#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "docdash": "^2.0.2",
    "eslint": "^9.39.2",
    "eslint-plugin-html": "^8.1.3",
    "happy-dom": "^20.3.1",
    "husky": "^9.0.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.8.0",
    "serve": "^14.2.4",
    "terser": "^5.46.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "tmp": "^0.2.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
