{
  "name": "jscd48",
  "version": "1.0.0",
  "description": "JavaScript interface for the CD48 Coincidence Counter using Web Serial API",
  "type": "module",
  "main": "cd48.js",
  "types": "cd48.d.ts",
  "files": [
    "cd48.js",
    "cd48.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "npx serve .",
    "dev": "npx serve . --cors",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:bench": "vitest bench --run",
    "test:bench:watch": "vitest bench",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report tests/e2e-report",
    "lint": "eslint *.js examples/*.html",
    "lint:fix": "eslint --fix *.js examples/*.html",
    "format": "prettier --write \"**/*.{js,json,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html}\"",
    "docs": "jsdoc -c jsdoc.json",
    "prepublishOnly": "npm run lint && npm run test && npm run format:check",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenPhysics/jscd48.git"
  },
  "keywords": [
    "cd48",
    "coincidence",
    "counter",
    "physics",
    "web-serial",
    "serial",
    "instrumentation",
    "red-dog-physics"
  ],
  "author": "OpenPhysics Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenPhysics/jscd48/issues"
  },
  "homepage": "https://github.com/OpenPhysics/jscd48#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "better-docs": "^2.7.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-plugin-html": "^8.1.3",
    "happy-dom": "^20.3.1",
    "http-server": "^14.1.1",
    "husky": "^9.0.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.8.0",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
